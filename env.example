# EmailCleaner Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MySQL Database Connection
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=emailcleaner
DB_PORT=3306

# Alternative: Use DATABASE_URL for connection string format
# DATABASE_URL=mysql://user:password@localhost:3306/emailcleaner

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================

# Google OAuth 2.0 Credentials
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# =============================================================================
# NEXTAUTH CONFIGURATION
# =============================================================================

# NextAuth.js Configuration
# Generate a secure random string for production
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# GOOGLE AI (GEMINI) CONFIGURATION
# =============================================================================

# Google AI API Key for Gemini
# Get this from Google AI Studio (https://makersuite.google.com/app/apikey)
GOOGLE_AI_API_KEY=your_gemini_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Node Environment
NODE_ENV=development

# Application URL (for production)
# APP_URL=https://your-domain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption Key for OAuth Tokens (32 characters)
# Generate a secure random string for production
ENCRYPTION_KEY=your_32_character_encryption_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Logging Level (debug, info, warn, error)
LOG_LEVEL=info

# Rate Limiting
# MAX_REQUESTS_PER_MINUTE=100

# Email Sync Configuration
# SYNC_DAYS_BACK=30
# MAX_EMAILS_PER_SYNC=20

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Uncomment and configure these for production deployment

# Database (Production)
# DB_HOST=your-production-db-host
# DB_USER=your-production-db-user
# DB_PASSWORD=your-production-db-password
# DB_NAME=your-production-db-name

# NextAuth (Production)
# NEXTAUTH_URL=https://your-domain.com
# NEXTAUTH_SECRET=your-production-secret

# Google OAuth (Production)
# Make sure to add your production domain to authorized redirect URIs
# GOOGLE_CLIENT_ID=your-production-client-id
# GOOGLE_CLIENT_SECRET=your-production-client-secret

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable NextAuth debug mode in development
# NEXTAUTH_DEBUG=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit .env.local to version control
# 2. Use strong, unique secrets in production
# 3. Regularly rotate API keys and secrets
# 4. Use environment-specific configurations
# 5. Test all configurations before deployment
